    {
      "name": "WebSocket (Socket.io)",
      "item": [
        {
          "name": "Connect to Socket.io Server",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const socket = io('http://localhost:3000');",
                  "console.log('Connected to socket server:', socket.id);"
                ]
              }
            }
          ],
          "request": {
            "url": "http://localhost:3000/socket.io/?EIO=4&transport=websocket",
            "method": "GET"
          }
        },
        {
          "name": "Emit chatMessage Event",
          "request": {
            "method": "POST",
            "url": "http://localhost:3000/socket.io/?EIO=4&transport=polling",
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"event\": \"chatMessage\",\n\t\"data\": {\n\t\t\"chatId\": \"{{chatId}}\",\n\t\t\"senderId\": \"{{userId}}\",\n\t\t\"content\": \"Hello from Socket.io\",\n\t\t\"type\": \"text\"\n\t}\n}"
            }
          }
        },
        {
          "name": "Join Room",
          "request": {
            "method": "POST",
            "url": "http://localhost:3000/socket.io/?EIO=4&transport=polling",
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"event\": \"joinRoom\",\n\t\"data\": \"{{chatId}}\"\n}"
            }
          }
        }
      ]
